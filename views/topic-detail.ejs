<%- include('partials/header', { title: title }); %>

<div class="topic-detail">
    <div class="breadcrumb">
        <a href="/">Главная</a> / <a href="/topics">Темы</a> / <span><%= topic.title %></span>
    </div>
    
    <article class="lesson-content">
        <h1 class="lesson-title"><%= topic.title %></h1>
        <div class="lesson-meta">
            <span class="meta-item"><i class="fas fa-clock"></i> 45 минут</span>
            <span class="meta-item"><i class="fas fa-user"></i> 7 класс</span>
            <span class="meta-item"><i class="fas fa-calendar"></i> Обновлено: 15.02.2026</span>
        </div>
        
        <div class="lesson-image">
            <img src="/images/continents/<%= topic.image || 'default.jpg' %>" alt="<%= topic.title %>">
        </div>
        
        <div class="lesson-text">
            <h2>Описание</h2>
            <p><%= topic.description %></p>
            
            <h2>Содержание урока</h2>
            <div class="lesson-sections">
                <% if (topic.content) { %>
                    <p><%= topic.content %></p>
                <% } else { %>
                    <p>Содержание урока будет добавлено в ближайшее время.</p>
                <% } %>
            </div>
            
            <% if (topic.video) { %>
            <div class="lesson-video">
                <h2>Видеоурок</h2>
                <div class="video-container">
                    <iframe width="100%" height="400" src="<%= topic.video %>" 
                            frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
            <% } %>
            
            <div class="lesson-actions">
                <a href="/quiz/<%= topic.quizId %>" class="btn btn-primary">
                    <i class="fas fa-brain"></i> Пройти тест по теме
                </a>
                <a href="/topics" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> К списку тем
                </a>
            </div>
        </div>
    </article>
    
    <aside class="lesson-sidebar">
        <div class="sidebar-card">
            <h3>Материалы для скачивания</h3>
            <ul class="download-list">
                <li><a href="#"><i class="fas fa-file-pdf"></i> Конспект урока (PDF)</a></li>
                <li><a href="#"><i class="fas fa-image"></i> Карты и схемы</a></li>
                <li><a href="#"><i class="fas fa-table"></i> Таблицы данных</a></li>
            </ul>
        </div>
        
        <div class="sidebar-card">
            <h3>Полезные ссылки</h3>
            <ul class="links-list">
                <li><a href="/map"><i class="fas fa-map"></i> Интерактивная карта</a></li>
                <li><a href="/quiz"><i class="fas fa-question-circle"></i> Дополнительные тесты</a></li>
                <li><a href="/blog"><i class="fas fa-newspaper"></i> Статьи по теме</a></li>
            </ul>
        </div>
        
        <div class="sidebar-card">
            <h3>Статистика урока</h3>
            <div class="stats">
                <div class="stat">
                    <div class="stat-number">10</div>
                    <div class="stat-label">Вопросов в тесте</div>
                </div>
                <div class="stat">
                    <div class="stat-number">85%</div>
                    <div class="stat-label">Успеваемость</div>
                </div>
            </div>
        </div>
    </aside>
</div>

<%- include('partials/footer'); %>